<header>
  <div class='container'>
    <!-- Logo on the left -->
    <div class='logo'>
      <%= link_to (image_tag 'logo.png', { :alt => 'DeoVolente @ UC Berkeley' }), root_path %>
    </div>

    <!-- Navigation links on the right -->
    <div class='nav-links'>
      <ul>
        <li><%= link_to t('Data Loads'), data_loads_path %></li>
        <li><%= link_to t('Create Data Load'), new_data_load_path %></li>
        <li>
          <% if signed_in? %>
            <%= link_to 'CalNet Logout', logout_path, data: { turbo: false } %>
          <% else %>
            <%= form_tag('/auth/cas', method: 'post', data: {turbo: true}) do %>
              <button class='button-as-link' type='submit'>CalNet Login</button>
            <% end %>
          <% end %>
        </li>
      </ul>
  </div>
</header>
